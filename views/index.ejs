<!DOCTYPE HTML>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <link href="/css/style.css" rel="stylesheet" type="text/css">
    <title>Document</title>
</head>
<body>
    <div class="wrapper">
        <ul class="activities">
            <% include ./partials/dynamic-header %>
            <% for(var i = 0; i < activities.length; i++){ %>
                <li class="activity">
                    <p><%= activities[i].type %> <%= activities[i].date %> <%= activities[i].time %></p>
                    <div class="flex">
                        <img class="activity-logo" src="/images/<%= activities[i].type %>.jpg" width="50px" height="50px"/>
                        <div>
                            <p><%= activities[i].place || '' %> <%= activities[i].duration %></p>
                            <p><%= activities[i].description || '' %></p>
                        </div>
                    </div>
                    <div>
                        <a href="/detail/<%= activities[i].id %>"><button>Detail</button></a>
                        <a href="/update/<%= activities[i].id %>"><button>Upraviť</button></a>
                        <a href="/remove/<%= activities[i].id %>"><button>Zmazať</button></a>
                    </div>
                </li>
            <% } %>
        </ul>
    </div>
</body>
</html>

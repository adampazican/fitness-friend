<!DOCTYPE HTML>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <link href="/css/style.css" rel="stylesheet" type="text/css">
    <title>Nová aktivita</title>
</head>
<body>
    <div class="wrapper">
        <form action="/activities" method="POST" class="formular">
            <% include ./partials/header %>
            <legend>Nová aktivita</legend>
            <div>
                <input placeholder="popis" type="text" name="description" >
                <select name="type">
                    <option value="beh">beh</option>
                    <option value="chôdza">chôdza</option>
                    <option value="crossfit">crossfit</option>
                    <option value="workout">workout</option>
                    <option value="jóga">jóga</option>
                </select>
            </div>
            <div>
                <input placeholder="trvanie" type="number" name="duration1">
                <select name="duration2">
                    <option value="sekúnd">sekúnd</option>
                    <option value="minút">minút</option>
                    <option value="hodín">hodín</option>
                </select>
            </div>
            <div>
                <input placeholder="dátum" type="date" name="date" required pattern="[0-9]{4}-[0-9]{2}-[0-9]{2}">
                <input placeholder="čas" type="time" name="time" required>
            </div>
            <div>
                <input placeholder="miesto" type="text" name="place">
            </div>


            <div class="buttons">
                <button type="submit">Vytvoriť</button>
                <button type="reset">Zmazať</button>
                <a href="/"><button type="button">Späť</button></a>
            </div>
        </form>
    </div>
</body>
</html>
